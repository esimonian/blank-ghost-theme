{
	"env": {
		"browser": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"one-var": [
			"error",
			"never"
		],
		"no-unused-vars": "warn"
	},
	"plugins": [
		"json"
	]
}
